@model List<PlaylistViewModel>

@{
    ViewData["Title"] = "Mis Playlists";
}

<h1>Mis Playlists</h1>

@if (Model.Count == 0)
{
    <p>No hay playlists disponibles.</p>
}
else
{
    <ul>
        @foreach (var playlist in Model)
        {
            <li>
                <h3>@playlist.Name</h3>
                <p><strong>Descripción:</strong> @playlist.Description</p>
                <p><strong>Propietario:</strong> @playlist.Owner</p>
                <hr />
            </li>
        }
    </ul>
}
